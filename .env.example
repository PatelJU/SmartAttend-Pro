# Database Configuration
DB_HOST=localhost
DB_USER=your_username
DB_PASSWORD=your_secure_password
DB_NAME=face_recognition_db

# Application Settings
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_SECRET_KEY=your_secret_key_here  # Generate a secure random key
APP_DEBUG=False  # Set to True for development

# Face Recognition Settings
MIN_FACE_CONFIDENCE=0.6  # Minimum confidence score for face detection
MAX_FACES_PER_IMAGE=1   # Maximum number of faces to detect in an image
FACE_MODEL_PATH=models/face_recognition_model  # Path to save trained model

# Storage Settings
PHOTO_STORAGE_PATH=data/photos  # Path to store student photos
BACKUP_PATH=data/backups        # Path for database backups

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key
TOKEN_EXPIRY_MINUTES=60
MAX_LOGIN_ATTEMPTS=3

# Development Settings
FLASK_ENV=development  # Options: development, production
FLASK_DEBUG=1         # Set to 0 for production 